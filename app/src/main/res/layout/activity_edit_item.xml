<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overAll_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shrividya.simpletodo.EditItemActivity">


    <TextView
        android:id="@+id/editItemMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Edit item below :"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        app:layout_heightPercent="10%"
        app:layout_marginEndPercent="10%"
        app:layout_marginTopPercent="10%" />

    <EditText
        android:id="@+id/editItemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editItemMessage"
        android:hint="Enter a new item"
        app:layout_heightPercent="20%"
        app:layout_marginEndPercent="10%" />

    <Button
        android:id="@+id/btnSaveEditedItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editItemText"
        android:text="save" />

</android.support.percent.PercentRelativeLayout>
